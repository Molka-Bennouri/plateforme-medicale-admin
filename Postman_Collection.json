{
  "info": {
    "name": "Plateforme Médicale API",
    "description": "Collection complète pour tester l'API de la Plateforme Médicale",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api"
    },
